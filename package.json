{
	"name": "report.w0s.jp",
	"version": "1.0.0",
	"description": "report.w0s.jp",
	"homepage": "https://github.com/SaekiTominaga/report.w0s.jp#readme",
	"bugs": {
		"url": "https://github.com/SaekiTominaga/report.w0s.jp/issues"
	},
	"license": "MIT",
	"author": "Saeki Tominaga",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SaekiTominaga/report.w0s.jp.git"
	},
	"scripts": {
		"app:dev": "nodemon --inspect node/dist/app.js",
		"build-watch": "tsc -w -p node/tsconfig.json",
		"build-all": "tsc -p node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts",
		"config-convert": "json2ts -i node/configure/schema -o node/configure/type",
		"config-validate": "run-p _config-validate:*",
		"_config-validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"_config-validate:js": "ajv --spec=draft7 -s node/configure/schema/js.json -d node/configure/js.json",
		"_config-validate:referrer": "ajv --spec=draft7 -s node/configure/schema/referrer.json -d node/configure/referrer.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"cors": "^2.8.5",
		"ejs": "^3.1.8",
		"express": "^4.18.2",
		"log4js": "^6.7.0",
		"nodemailer": "^6.8.0",
		"sqlite": "^4.1.2",
		"sqlite3": "^5.1.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/ejs": "^3.1.1",
		"@types/express": "^4.17.14",
		"@types/nodemailer": "^6.4.6",
		"@w0s/tsconfig": "^1.0.1",
		"ajv-cli": "^5.0.0",
		"eslint-config-w0s": "^1.0.8",
		"json-schema-to-typescript": "^11.0.2",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"stylelint": "^14.14.1",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-standard": "^29.0.0",
		"stylelint-prettier": "^2.0.0",
		"typescript": "^4.8.4"
	}
}
