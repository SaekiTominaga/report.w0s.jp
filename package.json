{
	"name": "report.w0s.jp",
	"version": "1.0.0",
	"description": "report.w0s.jp",
	"homepage": "https://github.com/SaekiTominaga/report.w0s.jp#readme",
	"bugs": {
		"url": "https://github.com/SaekiTominaga/report.w0s.jp/issues"
	},
	"license": "MIT",
	"author": "Saeki Tominaga",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SaekiTominaga/report.w0s.jp.git"
	},
	"scripts": {
		"app:dev": "nodemon --inspect node/dist/app.js",
		"build-watch": "tsc --project node/tsconfig.json -w",
		"build-all": "tsc --project node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts",
		"config:tsconvert": "json2ts -i node/configure/schema -o node/configure/type",
		"config:validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"config:validate:js": "ajv --spec=draft7 -s node/configure/schema/js.json -d node/configure/js.json",
		"config:validate:referrer": "ajv --spec=draft7 -s node/configure/schema/referrer.json -d node/configure/referrer.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.7",
		"cors": "^2.8.5",
		"ejs": "^3.1.7",
		"express": "^4.18.1",
		"log4js": "^6.4.6",
		"nodemailer": "^6.7.4",
		"sqlite": "^4.1.1",
		"sqlite3": "^5.0.6"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/ejs": "^3.1.0",
		"@types/express": "^4.17.13",
		"@types/nodemailer": "^6.4.4",
		"ajv-cli": "^5.0.0",
		"eslint-config-w0s": "^1.0.5",
		"json-schema-to-typescript": "^10.1.5",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"stylelint": "^14.8.1",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-prettier": "^2.0.0",
		"typescript": "^4.6.4"
	}
}
